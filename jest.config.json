{
  "moduleFileExtensions": [
    "jsx",
    "js",
    "json"
  ],
  "moduleNameMapper": {
    "^.*\\.(css|scss)$": "identity-obj-proxy"
  },
  "moduleDirectories": ["node_modules"],
  "testEnvironment": "jsdom",
  "coverageDirectory": "./coverage/",
  "collectCoverage": true,
  "setupFiles": [
    "<rootDir>/scripts/enzyme.config.js"
  ],
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.js$": "babel-jest"
  }
}
